<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Show_song_text.Views.SongTextPresentationView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:Show_song_text.Converters"
    xmlns:utils="clr-namespace:Show_song_text.Utils"
    xmlns:vm="clr-namespace:Show_song_text.ViewModels"
    x:Name="PresentationPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:SongTextPresentationViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout IsVisible="{Binding IsConnectedToServer, Converter={StaticResource InverseBoolConverter}}" Orientation="Vertical">
                <CarouselView
                    x:Name="carousel_view"
                    CurrentItem="{Binding CurrentPage}"
                    ItemsSource="{Binding Pages}"
                    Position="{Binding Position, Mode=TwoWay}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="20,20,20,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Padding="0,0,0,10"
                                    FontAttributes="Bold"
                                    FontSize="22"
                                    Text="{Binding Title}"
                                    TextColor="{StaticResource TextColor}" />
                                <Label
                                    x:Name="Label_Text_Server"
                                    Grid.Row="1"
                                    FontSize="{Binding FontSize}"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding Text}"
                                    TextColor="{StaticResource TextColor}"
                                    VerticalOptions="Fill" />

                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <utils:CarouselIndicators
                    IndicatorHeight="16"
                    IndicatorWidth="16"
                    ItemsSource="{Binding Pages}"
                    Position="{Binding Position}"
                    SelectedIndicator="selected_circle.png"
                    UnselectedIndicator="unselected_circle.png" />
            </StackLayout>
            <Label
                x:Name="ghostLabel"
                HorizontalOptions="StartAndExpand"
                IsVisible="false"
                LineBreakMode="WordWrap"
                VerticalOptions="StartAndExpand" />
            <Grid Padding="10,10,10,10" IsVisible="{Binding IsConnectedToServer}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Padding="0,0,0,10"
                    FontAttributes="Bold"
                    FontSize="22"
                    Text="{Binding TitleOfSongWhenConnectedToServer}"
                    TextColor="{StaticResource TextColor}" />
                <StackLayout x:Name="SL_Text_Client" Grid.Row="1">
                    <Label
                        x:Name="Label_Text_Client"
                        FontSize="{Binding FontSize}"
                        LineBreakMode="WordWrap"
                        Text="{Binding TextOfSongWhenConnectedToServer}"
                        TextColor="{StaticResource TextColor}"
                        VerticalOptions="Fill" />
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>